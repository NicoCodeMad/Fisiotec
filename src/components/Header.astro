<header class="fixed top-0 w-full z-[100] transition-all duration-500" id="main-header">
  <div id="mobile-menu" class="fixed inset-0 bg-white z-[105] flex flex-col items-center justify-start pt-32 gap-10 opacity-0 pointer-events-none transition-all duration-500 translate-y-[-20px]">
    <nav class="flex flex-col items-center gap-10 text-3xl font-serif font-bold text-primary">
      <a href="#servicios" class="mobile-link hover:text-accent transition-colors">Servicios</a>
      <a href="#tarifas" class="mobile-link hover:text-accent transition-colors">Tarifas</a>
      <a href="#sobre-nosotros" class="mobile-link hover:text-accent transition-colors">La Clínica</a>
      <a href="#ubicacion" class="mobile-link hover:text-accent transition-colors">Ubicación</a>
    </nav>
    <div class="h-[1px] w-24 bg-border"></div>
    <a href="https://wa.me/34600000000" class="bg-accent text-white px-10 py-4 rounded-full font-bold shadow-premium active:scale-95 transition-all">
      Pedir Cita
    </a>
  </div>

  <div class="max-w-7xl mx-auto px-6 lg:px-12 py-6">
    <div class="bg-white/70 backdrop-blur-xl border border-white/20 shadow-soft rounded-[2rem] px-8 h-20 flex justify-between items-center transition-all duration-300 relative z-[110]" id="header-container">
      
      <a href="/" class="flex items-center z-[120]">
  <img 
    src="/public/img/logo.svg" 
    alt="Logo FisioVital" 
    class="h-10 md:h-14 w-auto object-contain object-left transition-transform duration-300 group-hover:scale-105"
  />
</a>

      <nav class="hidden md:flex items-center gap-10">
        <div class="flex gap-8 items-center text-sm font-semibold tracking-wide uppercase">
          <a href="#servicios" class="text-muted hover:text-accent transition-all">Servicios</a>
          <a href="#tarifas" class="text-muted hover:text-accent transition-all">Tarifas</a>
          <a href="#sobre-nosotros" class="text-muted hover:text-accent transition-all">La Clínica</a>
        </div>
        <div class="h-8 w-[1px] bg-border/60 mx-2"></div>
        <a href="https://wa.me/34600000000" class="bg-primary text-white px-8 py-3 rounded-full text-sm font-bold shadow-premium hover:bg-accent transition-all">
          Reserva Directa
        </a>
      </nav>

      <button id="menu-btn" class="md:hidden relative z-[120] p-2 text-primary" aria-label="Abrir menú">
        <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8h16M4 16h16" />
        </svg>
      </button>

    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const mobileLinks = document.querySelectorAll('.mobile-link');
  const headerContainer = document.getElementById('header-container');

  function toggleMenu() {
    const isOpen = mobileMenu.classList.contains('opacity-100');
    
    mobileMenu.classList.toggle('opacity-100');
    mobileMenu.classList.toggle('opacity-0');
    mobileMenu.classList.toggle('pointer-events-auto');
    mobileMenu.classList.toggle('pointer-events-none');
    mobileMenu.classList.toggle('translate-y-0');
    mobileMenu.classList.toggle('translate-y-[-20px]');

    if (!isOpen) {
      menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />';
      document.body.style.overflow = 'hidden'; 
    } else {
      menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8h16M4 16h16" />';
      document.body.style.overflow = '';
    }
  }

  menuBtn?.addEventListener('click', toggleMenu);
  mobileLinks.forEach(link => link.addEventListener('click', toggleMenu));

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      headerContainer?.classList.add('h-16', 'mx-4', 'shadow-xl');
      headerContainer?.classList.remove('h-20');
    } else {
      headerContainer?.classList.remove('h-16', 'mx-4', 'shadow-xl');
      headerContainer?.classList.add('h-20');
    }
  });
</script>